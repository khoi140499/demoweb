
@{
    ViewBag.Title = "Index";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<div class="wrap-login100">
    @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "login100-form validate-form" }))
    {
        <span class="login100-form-title p-b-43">
            Login to continue
        </span>

        <div class="wrap-input100" style="margin-bottom: 30px;">
            <input class="input100" type="text" name="name" placeholder="Username" required>
            <span style="margin-left: 5px; margin-top: 5px; color: red;" class="valname"></span>
        </div>


        <div class="wrap-input100" style="margin-bottom: 30px;">
            <input class="input100" type="password" name="pass" placeholder="Password" required>
            <span style="margin-left: 5px; margin-top: 5px; color: red;" class="valpass"></span>
        </div>

        <div class="container-login100-form-btn">
            <input type="submit" value="Login" class="login100-form-btn" >
            </input>
        </div>

        <div class="text-center p-t-46 p-b-20">
            <span class="txt2">
                or <a href="@Url.Action("Register", "Home")">Sign up</a>
            </span>
        </div>
    }
    <div class="login100-more" style="background-image: url('/images/bg-01.jpg');">
    </div>
</div>
